{
  "compilerOptions": {
    "target": "es5",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true, // コンパイル時にヘルパーメソッドを作成するか
    "allowJs": true, // .jsと.jsxもコンパイル対象に含めるか
    "typeRoots": [
      "./functions/node_modules/@types" // ← functions内のnode_modules/@typesを指定する
    ]
  },
  "compileOnSave": true,
  "include": ["src", ".././global-types.d.ts"],
  "exclude": []
}
